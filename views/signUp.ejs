<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"></head>
	<title>Todos</title>
	<link rel="stylesheet" type="text/css" href="/public/css/login.css">
</head>
<body>
	<div class="wrapper">
		<div class="form">
			<div class="title">Create your account</div>
			<form method="post" action="/signUp">
				<% if(locals.empty_fields) { %>
				<span class="error_msg">All fields must be filled</span>
				<% }; %>
				<div class="input_wrap">
					<label for="input_text">Name</label>
					<div class="input_field">
						<input type="text" class="input" id="input_text" name="name">
					</div>
				</div>
				<div class="input_wrap">
					<label>Surname</label>
					<div class="input_field">
						<input type="text" class="input" id="input_text" name="surname">
					</div>
				</div>
				<div class="input_wrap">
					<label>Email</label>
					<div class="input_field">
						<input type="text" class="input" id="input_text" name="email">
					</div>
				</div>
				<div class="input_wrap">
					<label>Password</label>
					<div class="input_field">
						<input type="password" class="input" id="input_password" name="password">
					</div>
				</div>
					<label>Role</label>
				<div class="input_radio">
					<input type="radio" class="input_radio" name="role" value="admin" checked="true"> Admin</input>
				</div>
				<div class="input_radio">
					<input type="radio" class="input_radio" name="role" value="user"> User</input>
				</div>
				<div class="input_wrap">
					<input type="submit" id="login_btn" class="btn" value="Create account">
				</div>
			</form>
		</div>
	</div>

	<script type="text/javascript" src="JS/index.js"></script>
</body>
</html>
